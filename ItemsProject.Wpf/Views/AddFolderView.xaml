<views:MvxWindow
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
    x:Class="ItemsProject.Wpf.Views.AddFolderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:ItemsProject.Wpf.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" 
    Title="Add a New Folder"
    Height="250"
    Width="300"
    FontSize="18"
    ResizeMode="NoResize"
    FontFamily="pack://application:,,,/WheelsVault;component/Assets/Fonts/#Fredoka Medium"
    d:DesignHeight="250" d:DesignWidth="300" WindowStartupLocation="CenterScreen">
    
    <views:MvxWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="#00AEEF" SecondaryColor="#2C84C7"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>    
    </views:MvxWindow.Resources>

    <views:MvxWindow.Style>
        <Style TargetType="views:MvxWindow" BasedOn="{StaticResource MaterialDesignWindow}">
            <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        </Style>
    </views:MvxWindow.Style>

    <materialDesign:Card>
        <Grid
            Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.ColumnSpan="2"
                Foreground="#333"
                FontSize="22"
                HorizontalAlignment="Center"
                Margin="0 15 0 18"
                Text="Folder Name"/>
            <TextBox
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding FolderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Grid.Row="1" 
                Grid.ColumnSpan="2" 
                Width="200"
                Padding="5 0"
                Foreground="Black"
                materialDesign:TextFieldAssist.CharacterCounterVisibility="Visible"
                materialDesign:TextFieldAssist.TextFieldCornerRadius="4"
                materialDesign:TextFieldAssist.UnderlineCornerRadius="6"
                Height="35"
                MaxLength="50">
                <materialDesign:TextFieldAssist.CharacterCounterStyle>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignCharacterCounterTextBlock}">
                        <Setter Property="Foreground" Value="#333"/>
                    </Style>
                </materialDesign:TextFieldAssist.CharacterCounterStyle>

                <TextBox.InputBindings>
                    <KeyBinding
                        Key="Enter"
                        Command="{Binding AddFolderCommand}" />
                </TextBox.InputBindings>
            </TextBox>

            <Button
                materialDesign:ButtonAssist.CornerRadius="4"
                Command="{Binding CancelAddFolderCommand}"
                FontSize="18"
                Margin="10 0 10 20"
                Grid.Row="3"
                Grid.Column="0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
                        <Setter Property="materialDesign:ShadowAssist.ShadowAnimationDuration" Value="10"/>
                        <Style.Triggers>
                            <EventTrigger
                                RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#4dc6f4"
                                            Duration="0:0:0:0.21"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger
                                    RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#00aeef"
                                            Duration="0:0:0:0.20"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <TextBlock
                    Foreground="#333"
                    Text="Cancel"/>
            </Button>

            <Button 
                materialDesign:ButtonAssist.CornerRadius="4"
                Command="{Binding AddFolderCommand}" 
                Margin="10 0 10 20" Grid.Row="3" 
                Grid.Column="1"
                FontSize="18"
                IsEnabled="{Binding CanAddFolder}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                        <Style.Triggers>
                            <EventTrigger
                                    RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#4dc6f4"
                                            Duration="0:0:0:0.21"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger
                                 RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#00aeef"
                                            Duration="0:0:0:0.20"/>             
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <TextBlock
                    Foreground="#333"
                    Text="Add Folder"/>
            </Button>
        </Grid>
    </materialDesign:Card>
</views:MvxWindow>
