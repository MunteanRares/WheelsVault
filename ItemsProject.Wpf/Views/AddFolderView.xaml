<views:MvxWindow
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
    x:Class="ItemsProject.Wpf.Views.AddFolderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:ItemsProject.Wpf.Views"
    mc:Ignorable="d" 
    Title="Add a New Folder"
    Height="250"
    Width="300"
    FontSize="18"
    Background="#092327"
    FontFamily="pack://application:,,,/ItemsProject.Wpf;component/Fonts/#Source Code Pro"
    d:DesignHeight="250" d:DesignWidth="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0 20 0 10" Text="Folder Name"></TextBlock>
        <TextBox Text="{Binding NewFolderName, Mode=TwoWay}" Grid.Row="1" Grid.ColumnSpan="2" Width="200"></TextBox>
        <Button mvx:Bi.nd="Command cancelAddFolderCommand" Padding="6 0" FontSize="18" Content="Cancel" Margin="10 0 10 20" Grid.Row="3" Grid.Column="0"></Button>
        <Button mvx:Bi.nd="Command addFolderCommand" FontSize="18" Content="Add Folder" Margin="10 0 10 20" Grid.Row="3" Grid.Column="1"></Button>

    </Grid>
</views:MvxWindow>
