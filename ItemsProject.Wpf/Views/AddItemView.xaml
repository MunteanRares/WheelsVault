<views:MvxWindow
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
            xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
            x:Class="ItemsProject.Wpf.Views.AddItemView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:ItemsProject.Wpf.Views"
            mc:Ignorable="d" 
            ResizeMode="NoResize"
            Width="342" Height="400"
            Title="Add Your Item"
            Background="#09203F"
            FontSize="20"
            FontFamily="pack://application:,,,/ItemsProject.Wpf;component/Assets/Fonts/#Fredoka Medium"
            d:DesignHeight="400" d:DesignWidth="342" WindowStartupLocation="CenterScreen">
    <Grid Margin="15 0 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="24" Margin="0 10" Text="Add a New Car" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

        <TextBlock Grid.Column="0" Margin="0 40 0 0" Grid.Row="1" Text="Car Name"></TextBlock>
        <TextBox Text="{Binding ModelName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="15 0 0 0" Grid.Column="1" Grid.Row="1" Height="28" Width="180" VerticalAlignment="Bottom" HorizontalAlignment="Left"></TextBox>

        <TextBlock Grid.Column="0" Margin="0 30 0 0" Grid.Row="2" Text="Model Year"></TextBlock>
        <TextBox Text="{Binding ModelReleaseDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="15 0 0 0" Grid.Column="1" Grid.Row="2" Height="28" Width="180" VerticalAlignment="Bottom" HorizontalAlignment="Left"></TextBox>

        <TextBlock Grid.Column="0" Margin="0 30 0 0" Grid.Row="3" Text="Collection"></TextBlock>
        <TextBox Text="{Binding CollectionName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="15 0 0 0" Grid.Column="1" Grid.Row="3" Height="28" Width="180" VerticalAlignment="Bottom" HorizontalAlignment="Left"></TextBox>
        <Button Command="{Binding CancelCommand}" Margin="10 0 10 20" Grid.Column="0" Grid.Row="5">
            <TextBlock Text="Cancel" Foreground="#09203F"></TextBlock>
        </Button>
        <Button Command="{Binding AddItemCommand}"
                Margin="10 0 10 20"
                IsEnabled="{Binding CanAddItem}"
                Grid.Column="1"
                Grid.Row="5">
            <TextBlock Text="Add Car" Foreground="#09203F"></TextBlock>
        </Button>
        
                
    </Grid>
</views:MvxWindow>
