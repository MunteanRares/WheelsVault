<views:MvxWpfView x:Class="ItemsProject.Wpf.Views.SettingsView"
             xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItemsProject.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <views:MvxWpfView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="#2196F3" SecondaryColor="#1976D2"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </views:MvxWpfView.Resources>

    <views:MvxWpfView.Style>
        <Style TargetType="views:MvxWpfView">
            <Style.Triggers>
                <EventTrigger
                    RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </views:MvxWpfView.Style>
    
    <Grid
        Margin="40 0 80 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" MinHeight="60"/>
            <RowDefinition Height="auto" MinHeight="60"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Column="0"
            Grid.Row="1"
            Foreground="#666"  
            FontSize="48"
            Text="Settings">
        </TextBlock>
        
        <Separator
            Background="#00aeef"
            Margin="0 10 0 0"
            Grid.Row="2"
            Grid.ColumnSpan="3">
        </Separator>

        <Button
            Command="{Binding SaveDataToDeviceCommand}"
            IsEnabled="{Binding IsButtonEnabled}"
            FontSize="18"
            Margin="0 30 0 0"
            HorizontalAlignment="Left"
            materialDesign:ElevationAssist.Elevation="Dp2"
            materialDesign:ShadowAssist.ShadowAnimationDuration="10"
            VerticalAlignment="Top"
            Grid.Row="3">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                    <Style.Triggers>
                        <EventTrigger
                            RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                     Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                        To="#4dc6f4"
                                        Duration="0:0:0:0.21"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger
                                RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                        To="#00aeef"
                                        Duration="0:0:0:0.20"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <TextBlock
                Text="Store Data on Device"
                Foreground="#333">
            </TextBlock>
        </Button>

        <Button
            Command="{Binding ImportSaveData}"
            FontSize="18"
            Margin="0 30 0 0"
            materialDesign:ElevationAssist.Elevation="Dp2"
            materialDesign:ShadowAssist.ShadowAnimationDuration="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Grid.Row="4">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                    <Style.Triggers>
                        <EventTrigger
                             RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                        To="#4dc6f4"
                                        Duration="0:0:0:0.21"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger
                                RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                        To="#00aeef"
                                        Duration="0:0:0:0.20"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <TextBlock
                Text="Import Save Data"
                Foreground="#333">
            </TextBlock>
        </Button>

        <Button
            BorderBrush="pink"
            Background="Transparent"
            VerticalAlignment="Top"
            Margin="0 30 0 0"
            Grid.Row="5">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedSecondaryButton}">
                    <Style.Triggers>
                        <EventTrigger
                                RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"
                                        To="#943126"
                                        Duration="0:0:0:0.21"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger
                                 RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                        To="Transparent"
                                        Duration="0:0:0:0.20"/>

                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Button.BorderBrush).(SolidColorBrush.Color)"
                                        To="pink"
                                        Duration="0:0:0:0.20"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <TextBlock
                FontSize="18"
                Foreground="#333"
                Text="Delete All Collection">
            </TextBlock>
        </Button>

        <TextBlock
            Grid.Row="6"
            Foreground="#777"
            VerticalAlignment="top"  
            Text="(Work In Progress)">
            
        </TextBlock>
    </Grid>
</views:MvxWpfView>
