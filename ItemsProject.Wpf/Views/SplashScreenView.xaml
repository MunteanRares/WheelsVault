<views:MvxWpfView 
    x:Class="ItemsProject.Wpf.Views.SplashScreenView"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ItemsProject.Wpf.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    FontSize="22"
    FontFamily="pack://application:,,,/WheelsVault;component/Assets/Fonts/#Fredoka Medium"
    d:DesignHeight="450" d:DesignWidth="800">
    <views:MvxWpfView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="#2196F3" SecondaryColor="#1976D2"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </views:MvxWpfView.Resources>
    <materialDesign:Card
        materialDesign:UniformCornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4.5*"/>
                <RowDefinition Height="4.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ProgressBar
                VerticalAlignment="Bottom"
                Grid.Row="0"
                Width="60"
                Value="0"
                Margin="0 0 0 30"
                IsIndeterminate="True"
                Style="{StaticResource MaterialDesignCircularProgressBar}"/>
            <StackPanel
                Grid.Row="1"
                Margin="0 20 0 0"
                VerticalAlignment="Top">
                <TextBlock
                    HorizontalAlignment="Center"
                    Text="Fetching data"
                    FontSize="22"
                    Foreground="#333"/>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Text="Please wait..."
                    Foreground="#333"/>
            </StackPanel>
            <TextBlock
                Grid.Row="2"
                Foreground="#777"
                FontSize="14"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="© Muntean Rares">
            
            </TextBlock>
        
        </Grid>
    </materialDesign:Card>
</views:MvxWpfView>
